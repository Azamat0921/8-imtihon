
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql" // sqlite yoki mysql ham bo'lishi mumkin
  url      = env("DATABASE_URL")
}

model Hero {
  id        String   @id @default(uuid())
  title     String
  subtitle  String
  imageUrl  String
  createdAt DateTime @default(now())
}

model Pricing {
  id          String   @id @default(uuid())
  title       String
  description String
  price       Float
  createdAt   DateTime @default(now())
}

model AboutUs {
  id          String   @id @default(uuid())
  description String
  imageUrl    String
  createdAt   DateTime @default(now())
}
